	<definition name="calendar.*" template="/WEB-INF/views/calendar/base.jsp">
		
		<!-- asset -->
		<put-attribute name="asset" value="/WEB-INF/views/inc/calendarAsset.jsp"></put-attribute> 
		
		<!-- header -->
		<put-attribute name="header" value="/WEB-INF/views/calendar/CalendarHeader.jsp"></put-attribute>
		
		<!-- content -->
		<put-attribute name="content" value="/WEB-INF/views/calendar/{1}.jsp"></put-attribute>
		
	</definition>

	<definition name="project.*" template="/WEB-INF/views/project/{1}.jsp">
		<!-- asset -->
		<put-attribute name="asset" value="/WEB-INF/views/inc/calendarAsset.jsp"></put-attribute> 
	</definition>


	<definition name="memo.*" template="/WEB-INF/views/calendar/base.jsp">
		
		<!-- asset -->
		<put-attribute name="asset" value="/WEB-INF/views/inc/calendarAsset.jsp"></put-attribute> 
		
		<!-- header -->
		<put-attribute name="header" value="/WEB-INF/views/calendar/CalendarHeader.jsp"></put-attribute>
		
		<!-- content -->
		<put-attribute name="content" value="/WEB-INF/views/memo/{1}.jsp"></put-attribute>
		
	</definition>
	
	<definition name="map.*" template="/WEB-INF/views/memo/{1}.jsp"/>
	
	<definition name="mail.*" template="/WEB-INF/views/layout/mailTemplate.jsp">
			
		<!-- asset -->
		<put-attribute name="asset" value="/WEB-INF/views/inc/mailAsset.jsp"></put-attribute> 
		
		<!-- header -->
		<put-attribute name="header" value="/WEB-INF/views/inc/header.jsp"></put-attribute>

		<!-- mail header -->
		<put-attribute name="mailHeader" value="/WEB-INF/views/inc/mailHeader.jsp"></put-attribute>
		
		<!-- sidebar -->
		<put-attribute name="mailSidebar" value="/WEB-INF/views/inc/mailSidebar.jsp"></put-attribute>
		
		<!-- content -->
		<put-attribute name="content" value="/WEB-INF/views/mail/{1}.jsp"></put-attribute>
		
	</definition>
	
</tiles-definitions>























